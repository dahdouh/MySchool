<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/user_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="13dp"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/name"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_id"
                android:layout_marginLeft="13dp"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="normal|italic" />

            <TextView
                android:id="@+id/price"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_id"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="-12dp"
                android:layout_marginRight="10dp"
                android:layout_toRightOf="@id/name"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="#FF4500"
                android:textSize="20dp"
                android:textStyle="bold|italic" />

            <ImageButton
                android:id="@+id/subscription_delete_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/price"
                android:layout_marginTop="10dp"
                android:layout_marginRight="-35dp"
                android:layout_toLeftOf="@id/subscription_delete_btn"
                android:background="@android:color/transparent"
                app:srcCompat="@drawable/icons8_delete_65" />

            <Button
                android:id="@+id/subscription_delete_btn"
                android:layout_width="wrap_content"
                android:layout_height="35dp"
                android:layout_below="@id/price"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/name"
                android:background="@drawable/button_red"
                android:elevation="0dp"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:text="@string/navigation_menu_unsubscribe"
                android:textColor="#fff"
                android:textSize="14sp"
                android:transitionName="trans_btn_signup"
                app:srcCompat="@drawable/icons8_delete_65" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>