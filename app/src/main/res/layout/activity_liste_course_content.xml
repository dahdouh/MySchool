<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
android:id="@+id/registerActivity"
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".ListeCourseContentActivity"
android:background="#fff"
android:orientation="vertical"
android:scrollbarSize="0dp">

    <LinearLayout
        android:id="@+id/listeChapitre"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal|center_vertical"
        android:layout_marginTop="-80dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/video"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="gotoNextInterface"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorAccent"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/photo1"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icons8_video_96"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/course_video_title"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#252525"
                android:layout_marginRight="170dp"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@id/photo2"
                android:layout_gravity="center_vertical"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/courses"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="gotoNextInterface"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorAccent"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/photo2"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icons8_pdf_96"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/navigation_menu_courses"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#252525"
                android:layout_marginRight="170dp"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@id/photo2"
                android:layout_gravity="center_vertical"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/quiz"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="gotoNextInterface"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorAccent"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/photo3"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/icon_quiz"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="@string/navigation_menu_quiz"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#252525"
                android:layout_marginRight="170dp"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@id/photo3"
                android:layout_gravity="center_vertical"/>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/exercice"
            android:layout_width="340dp"
            android:layout_height="70dp"
            android:orientation="horizontal"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:gravity="center"
            android:onClick="gotoNextInterface"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@color/colorAccent"
            app:cardCornerRadius="8dp"
            app:cardElevation="6dp">

            <ImageView
                android:id="@+id/photo"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/exercice_gif"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"/>

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="EXERCICES"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#252525"
                android:layout_marginRight="170dp"
                android:layout_marginLeft="80dp"
                android:layout_toRightOf="@id/photo"
                android:layout_gravity="center_vertical"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
 </LinearLayout>

