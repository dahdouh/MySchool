<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">



        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <ImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/user_photo"
                android:src="@drawable/icons8_etudiant_48"
                android:layout_width="70dp"
                android:layout_height="50dp"
                android:elevation="5dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="1dp"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:id="@+id/course_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_photo"
                android:layout_marginLeft="13dp"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="#000"
                android:textSize="1dp"
                android:textStyle="bold|italic"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/name"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text="DDDD"
                android:textColor="#000"
                android:textSize="23dp"
                android:textStyle="bold|italic"
                android:layout_toRightOf="@id/user_photo"
                android:layout_below="@id/course_id"
                android:layout_marginTop="-15dp"
                android:layout_marginLeft="23dp"/>



            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:alpha="1.5"
                android:layout_below="@id/user_photo"
                android:background="@drawable/default_dots"
                android:layout_marginTop="15dp"></View>

            <!--
            <Button
                android:id="@+id/details"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_red"
                android:elevation="0dp"
                android:text="@string/button_details"
                android:textColor="#fff"
                android:transitionName="trans_btn_signup"
                android:textSize="14sp"
                android:layout_below="@id/name"
                android:layout_marginLeft="15dp"/>
            -->


        </RelativeLayout>


</LinearLayout>