<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg_header_rectangle"
tools:context=".ChildActivity">


<com.google.android.material.navigation.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/header"
    app:menu="@menu/main_menu"
    tools:ignore="MissingConstraints" />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layoutDirection="ltr"
        app:navigationIcon="@drawable/menu_icon"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="1dp"
        android:elevation="5dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icon_student" />

    <TextView
        android:id="@+id/user_name"
        android:layout_width="190dp"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:text="@string/parent_children"
        android:textColor="#ffffff"
        android:fontFamily="@font/antic"
        app:layout_constraintStart_toEndOf="@id/user_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_toRightOf="@id/user_photo"
        android:layout_marginTop="35dp"
        android:textStyle="bold"
        android:layout_marginLeft="-10dp"/>

    <Button
        android:id="@+id/child_add_btn"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="0px"
        android:layout_toRightOf="@id/user_name"
        android:padding="0dp"
        android:textAllCaps="false"

        android:background="@drawable/button_red"
        android:elevation="0dp"
        android:text="@string/button_add"
        android:textColor="#fff"
        android:textSize="14sp"

        />
<!--
    <ImageButton
        android:id="@+id/child_add_btn"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="0px"
        android:layout_toRightOf="@id/user_name"
        app:srcCompat="@drawable/icons8_add_65"
        android:background="@android:color/transparent"/>
-->
</RelativeLayout>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="-10dp">

    <!--
    <TextView
        android:id="@+id/empty_child_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:text="@string/parent_children"
        android:layout_marginTop="145dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="8dp"
        android:background="@drawable/button_red"
        android:fontFamily="@font/antic"
        android:textStyle="bold"/>
    -->

    <GridLayout
        android:id="@+id/card_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="113dp"
        android:layout_marginBottom="60dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="0dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_editor_absoluteX="0dp">

        <ListView
            android:id="@+id/list_students"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:paddingTop="10dp"
            android:paddingBottom="8dp"/>

    </GridLayout>
</RelativeLayout>

</androidx.drawerlayout.widget.DrawerLayout>
