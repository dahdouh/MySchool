<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:layout_rowWeight="1"
        android:layout_columnWeight="1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="16dp"
        android:background="@color/colorAccent"
        app:cardCornerRadius="8dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/course_id"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/user_photo"
                android:layout_marginLeft="13dp"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="#FFF"
                android:textSize="1dp"
                android:textStyle="bold|italic" />

            <TextView
                android:id="@+id/user_id"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="bold|italic"
                android:layout_marginLeft="13dp"/>


            <TextView
                android:id="@+id/name"
                android:layout_width="240dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/user_id"
                android:fontFamily="sans-serif-medium"
                android:text=""
                android:textColor="#000"
                android:textSize="18dp"
                android:textStyle="normal|italic"
                android:layout_marginLeft="13dp"/>


            <Button
                android:id="@+id/details"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_red"
                android:elevation="0dp"
                android:text="@string/button_details"
                android:textColor="#fff"
                android:transitionName="trans_btn_signup"
                android:textSize="14sp"
                android:layout_below="@id/name"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/exercices"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_green_round"
                android:elevation="0dp"
                android:text="@string/navigation_menu_exercices"
                android:textColor="#fff"
                android:transitionName="trans_btn_signup"
                android:textSize="14sp"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/details"
                android:layout_marginLeft="15dp"/>

            <Button
                android:id="@+id/quiz"
                android:layout_width="100dp"
                android:layout_height="35dp"
                android:layout_gravity="left"
                android:layout_marginTop="18dp"
                android:background="@drawable/button_green"
                android:elevation="0dp"
                android:text="@string/navigation_menu_quiz"
                android:textColor="#fff"
                android:transitionName="trans_btn_signup"
                android:textSize="14sp"
                android:layout_below="@id/name"
                android:layout_toRightOf="@id/exercices"
                android:layout_marginLeft="10dp"/>


            <ImageView
                android:id="@+id/course_photo"
                android:layout_width="185dp"
                android:layout_height="80dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@id/name"
                android:elevation="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/chimie"
                android:layout_marginRight="10dp"
                android:layout_marginTop="8dp"/>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>