<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/drawer_layout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@drawable/bg_header_rectangle"
tools:context=".ForumActivity">


<com.google.android.material.navigation.NavigationView
    android:id="@+id/nav_view"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="start"
    app:headerLayout="@layout/header"
    app:menu="@menu/main_menu"
    tools:ignore="MissingConstraints" />


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="10dp">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="0dp"
        android:layoutDirection="ltr"
        app:navigationIcon="@drawable/menu_icon"
        tools:ignore="MissingConstraints" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/user_photo"
        android:layout_width="100dp"
        android:layout_height="90dp"
        android:layout_marginLeft="34dp"
        android:layout_marginTop="1dp"
        android:elevation="5dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/icons8_chat_orange_48" />

    <TextView
        android:id="@+id/user_name"
        android:textSize="24sp"
        android:text="@string/navigation_menu_forum"
        android:textColor="#ffffff"
        android:fontFamily="@font/antic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/user_photo"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_toRightOf="@id/user_photo"
        android:layout_marginTop="35dp"
        android:textStyle="bold"/>

    <ImageButton
        android:id="@+id/student_add_imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="190dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="15px"
        android:layout_toRightOf="@id/user_photo"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/icons8_add_65" />


</RelativeLayout>



<GridLayout
    android:layout_width="match_parent"
    android:layout_height="470dp"
    android:layout_marginTop="120dp"
    android:layout_marginBottom="60dp"
    android:alignmentMode="alignMargins"
    android:columnCount="2"
    android:columnOrderPreserved="false"
    android:padding="0dp"
    android:rowCount="3"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintTop_toTopOf="@id/dashboard"
    app:layout_constraintVertical_bias="0.0"
    app:layout_editor_absoluteX="0dp">

    <ListView
        android:id="@+id/list_students"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@android:color/transparent"
        android:paddingTop="10dp"
        android:paddingBottom="8dp" />
</GridLayout>



</androidx.drawerlayout.widget.DrawerLayout>