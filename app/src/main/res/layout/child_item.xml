<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:background="#FFFFFF"
android:orientation="horizontal">



<RelativeLayout
    android:id="@+id/child_select"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="6dp"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="9dp"
    android:layout_marginRight="9dp"
    android:padding="10dp"
    android:orientation="vertical"
    android:background="#F8F8F8">

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/image"
        android:src="@drawable/icons8_etudiant_48"
        app:civ_border_width="3dp"
        app:civ_border_color="#FFFFFFFF"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:elevation="5dp"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:layout_marginTop="-20dp"
        android:layout_marginLeft="1dp"/>

    <TextView
        android:id="@+id/user_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="13dp"
        android:fontFamily="sans-serif-medium"
        android:text=""
        android:textColor="#FFF"
        android:textSize="1dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/name"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="13dp"
        android:fontFamily="sans-serif-medium"
        android:text=""
        android:textColor="#000"
        android:textSize="21dp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/email"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/name"
        android:layout_toRightOf="@id/image"
        android:fontFamily="sans-serif-medium"
        android:text=""
        android:textColor="#696969"
        android:textSize="17dp"
        android:textStyle="normal|italic" />

    <TextView
        android:id="@+id/level"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="10dp"
        android:layout_below="@id/email"
        android:layout_toRightOf="@id/image"
        android:fontFamily="sans-serif-medium"
        android:text=""
        android:textColor="#696969"
        android:textSize="17dp"
        android:textStyle="normal" />


    <Button
        android:id="@+id/child_delete_btn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_red_round"
        android:textAllCaps="false"
        android:elevation="0dp"
        android:text="@string/parent_child_delete"
        android:textColor="#fff"
        android:transitionName="trans_btn_signup"
        android:textSize="14sp"
        android:layout_below="@id/image"
        android:layout_marginLeft="15dp"/>

    <Button
        android:id="@+id/child_subscribe_btn"
        android:layout_width="100dp"
        android:layout_height="35dp"
        android:layout_gravity="left"
        android:layout_marginTop="8dp"
        android:background="@drawable/button_blue_round"
        android:elevation="0dp"
        android:text="@string/button_subscribe"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:transitionName="trans_btn_signup"
        android:textSize="14sp"
        android:layout_below="@id/image"
        android:layout_toRightOf="@id/image"
        android:layout_marginLeft="28dp"/>

    <!--
  <TextView
      android:id="@+id/user_id"
      android:layout_width="310dp"
      android:layout_height="wrap_content"
      android:layout_marginLeft="13dp"
      android:fontFamily="sans-serif-medium"
      android:text=""
      android:textColor="#000"
      android:textSize="17dp"
      android:layout_marginTop="10dp"
      android:layout_below="@id/subject"/>
  -->


</RelativeLayout>


</LinearLayout>





