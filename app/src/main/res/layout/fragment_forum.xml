<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentForum"
    android:background="@drawable/bg_cube">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

    <GridLayout
        android:id="@+id/grid_forum"
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="0dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:layout_editor_absoluteX="0dp">

        <ListView
            android:id="@+id/list_students"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:paddingTop="10dp"
            android:paddingBottom="5dp" />

    </GridLayout>

    <Button
        android:id="@+id/add_topic_btn"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="20dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="@string/button_add_topic"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:transitionName="trans_btn_signup"
        android:background="@drawable/button_blue_round"
        android:textSize="20dp"
        android:layout_below="@id/grid_forum"/>

    </LinearLayout>


</FrameLayout>