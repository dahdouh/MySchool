<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".FragmentSubscription"
    android:background="@drawable/bg_header_rectangle">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/user_photo"
            android:src="@drawable/logo"
            android:layout_width="100dp"
            android:layout_height="90dp"
            android:elevation="5dp"
            android:padding="20dp"
            android:scaleType="centerCrop"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="34dp"/>

        <TextView
            android:id="@+id/user_name"
            android:textSize="24sp"
            android:text="@string/subscribe_title"
            android:textColor="#ffffff"
            android:fontFamily="@font/antic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/user_photo"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_toRightOf="@id/user_photo"
            android:layout_marginTop="35dp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/student_add_imageButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="190dp"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="15px"
            android:layout_toRightOf="@id/user_photo"
            android:background="@android:color/transparent"
            app:srcCompat="@drawable/icons8_add_65" />


    </RelativeLayout>


    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="470dp"
        android:layout_marginTop="120dp"
        android:layout_marginBottom="60dp"
        android:alignmentMode="alignMargins"
        android:columnCount="2"
        android:columnOrderPreserved="false"
        android:padding="0dp"
        android:rowCount="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/dashboard"
        app:layout_constraintVertical_bias="0.0"
        app:layout_editor_absoluteX="0dp">

        <ListView
            android:id="@+id/list_students"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:divider="@android:color/transparent"
            android:paddingTop="10dp"
            android:paddingBottom="8dp" />
    </GridLayout>

</FrameLayout>